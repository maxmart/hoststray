{
  "name": "hoststray",
  "version": "0.9.0",
  "main": "main.js",
  "license": "MIT",
  "scripts": {
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "start": "electron ."
  },
  "build": {
    "productName": "Hosts Tray",
    "appId": "maxmart.hoststray",
    "win": {
      "target": "portable",
      "artifactName": "ht.exe",
      "requestedExecutionLevel": "requireAdministrator"
    },
    "portable": {
      "artifactName": "ht.exe",
      "requestExecutionLevel": "admin"
    }
  },
  "dependencies": {
    "http-proxy": "*",
    "node-forge": "*",
    "sudo-prompt": "^9.2.1"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  }
}
